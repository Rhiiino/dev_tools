<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Dev Tools Window action -->
        <record id="dev_tools.action_dev_tools_settings_menu" model="ir.actions.act_window">
            <field name='view_mode'>list,form</field>
            <field name='res_model'>dev.tools</field>
        </record>

        <!-- Dev Tools List view -->
        <record id="dev_tools_list_view" model="ir.ui.view">
            <field name='name'>dev.tools.list.view</field>
            <field name='model'>dev.tools</field>
            <field name='arch' type='xml'>
                <tree string='Dev Tools'>
                </tree>
            </field>
        </record>


        <!-- Dev Tools Form view -->
        <record id="dev_tools_form_view" model="ir.ui.view">
            <field name='name'>dev.tools.form.view</field>
            <field name='model'>dev.tools</field>
            <field name='arch' type='xml'>
                <form string='Dev Tools'>
                    <sheet>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Dev Tools menu Item -->
        <menuitem id='dev_tools.settings_menu' name='Dev Tools' parent="resource.menu_resource_config" groups='base.group_user' action='dev_tools.action_dev_tools_settings_menu'/>

    </data>
</odoo>
