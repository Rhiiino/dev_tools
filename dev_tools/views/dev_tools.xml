<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Dev Tools Window action -->
        <record id="dev_tools.action_dev_tools_settings_menu" model="ir.actions.act_window">
            <field name='view_mode'>list,form</field>
            <field name='res_model'>dev.tools</field>
        </record>

        <!-- Dev Tools List view -->
        <record id="dev_tools_list_view" model="ir.ui.view">
            <field name='name'>dev.tools.list.view</field>
            <field name='model'>dev.tools</field>
            <field name='arch' type='xml'>
                <tree string='Dev Tools'>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <!-- Dev Tools Form view -->
        <record id="dev_tools_form_view" model="ir.ui.view">
            <field name='name'>dev.tools.form.view</field>
            <field name='model'>dev.tools</field>
            <field name='arch' type='xml'>
                <form string='Dev Tools'>
                    <sheet>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="tool_toggles" string="Tool Toggles">
                                <field name="module_tray_active" widget="boolean_toggle"/>
                                <field name="input_shell_active" widget="boolean_toggle"/>
                                <field name="glass_sticky_active" widget="boolean_toggle"/>
                                <field name="tech_peek_active"  widget="boolean_toggle"/>
                                <field name="hover_bar_active"  widget="boolean_toggle"/>
                            </group>
                            <group>
                                <!-- PLACEHOLDER-->
                            </group>
                        </group>

                        <!-- Notebook consisting on pages dedicated to individual tools and their respective configuration parameters. -->
                        <notebook>
                        
                            <!-- Tool 1 specs (Module Tray) -->
                            <page name='Module Tray' attrs="{'invisible': [('module_tray_active', '=', False)]}">
                                <group>
                                    <field name='quick_upgradable_module_ids' widget="many2many_tags"/>  
                                    <field name="upgrade_success_alert_style"/>
                                    <field name="enable_humor" attrs="{'invisible': [('upgrade_success_alert_style', 'not in', ('persistent_sticky', 'temporary_sticky'))]}" widget="boolean_toggle"/>
                                </group>
                            </page>

                            <!-- Tool 2 specs (Input Shell) -->
                            <page name='Input Shell' attrs="{'invisible': [('input_shell_active', '=', False)]}">
                                <group>
                                    <group name="shell_hotkeys" string="Hotkeys">
                                        <field name='shell_toggle_hotkey'/>  
                                        <field name='shell_submit_hotkey'/>  
                                        <field name='shell_mode_cycle_hotkey'/>  
                                    </group>
                                    <group>
                                        <field name='name'/>  
                                    </group>
                                </group>
                            </page>

                            <!-- Tool 3 specs (Glass Sticky) -->
                            <page name='Glass Sticky' attrs="{'invisible': [('glass_sticky_active', '=', False)]}">
                                <group>
                                    <group name="sticky_hotkeys" string="Hotkeys">
                                        <field name='sticky_toggle_hotkey'/>
                                    </group>
                                    <group name="stick_input_group" string="Input">
                                        <field name='sticky_input'/>
                                    </group>
                                </group>
                            </page>

                             <!-- Tool 4 specs (Tech Peek) -->
                            <page name='Tech Peek' attrs="{'invisible': [('tech_peek_active', '=', False)]}">
                                <group>
                                    <group name="tech_peek_hotkeys" string="Hotkeys">
                                        <field name='tech_peek_toggle_hotkey'/>
                                        <field name='label_color' widget='color'/>
                                    </group>
                                    <group>
                                        <!-- PLACEHOLDER-->
                                    </group>
                                </group>
                            </page>

                            <!-- Tool 5 specs (Hover bar) -->
                            <page name='Hover Bar' attrs="{'invisible': [('hover_bar_active', '=', False)]}">
                                <group>
                                    <group name="hover_bar_group_1" string="Bar Modules">
                                        <group name='xxx' string=''>
                                            <field name="enable_technical_name_module"  widget="boolean_toggle"/>
                                            <field name="enable_field_type_module"  widget="boolean_toggle"/>
                                            <field name="enable_relational_model_module"  widget="boolean_toggle"/>
                                        </group>
                                        <group name='xxxx' string=''>
                                            <field name='technical_name_module_color' widget='color' attrs="{'invisible': [('enable_technical_name_module', '=', False)]}"/>
                                            <field name='field_type_module_color' widget='color' attrs="{'invisible': [('enable_field_type_module', '=', False)]}"/>
                                            <field name='relational_model_module_color' widget='color' attrs="{'invisible': [('enable_relational_model_module', '=', False)]}"/>
                                        </group>
                                        
                                    </group>
                                    <group>
                                        <!-- PLACEHOLDER-->
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Dev Tools menu Item -->
        <menuitem id='dev_tools.settings_menu' name='Dev Tools' parent="resource.menu_resource_config" groups='base.group_user' action='dev_tools.action_dev_tools_settings_menu'/>

    </data>
</odoo>
